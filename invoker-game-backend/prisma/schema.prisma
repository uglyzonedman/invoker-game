generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int     @id @default(autoincrement())
  createdAt  String  @map("created_at")
  updatedAt  String  @map("updated_at")
  login      String  @unique
  password   String
  avatarPath String? @default("")

  @@map("user")
}
